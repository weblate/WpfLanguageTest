<Window
    x:Class="WpfLanguageTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfLanguageTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            Foreground="Red"
            Text="{DynamicResource Language_Collection}" />
        <Button Content="Button" HorizontalAlignment="Left" Margin="297,326,0,0" VerticalAlignment="Top" Height="62" Width="250" Click="Button_Click"/>
    </Grid>
</Window>
